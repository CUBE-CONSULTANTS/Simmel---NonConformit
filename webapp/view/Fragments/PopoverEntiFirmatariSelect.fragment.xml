<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Popover contentHeight="50%" showHeader="false" showArrow="true" 
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Left">
        <List items="{
            path: 'modelloPopover>/entiSelezionati',
			sorter: {
				    path: 'modelloPopover>settore_lavorativo',
					descending: false,
					group: true
					},
				groupHeaderFactory: '.getGroupHeaderMultiCombobox'
			}">
            <StandardListItem title="{modelloPopover>nome}" />
        </List>
