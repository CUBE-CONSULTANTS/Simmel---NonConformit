<mvc:View controllerName="flexcollay.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar"
    height="100%"
    xmlns="sap.m">

    <f:DynamicPage>
        <f:title >
            <f:DynamicPageTitle >
                <f:heading>
                    <Title text="QUALITÁ - NON CONFORMITÁ"/>
                </f:heading>
                <f:actions>
                    <Image src="../public/logo.jpg"
                        height="22.00000000px"
                        width="100px"
                        visible="true"
                        tooltip="Share" />

                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header >
            <f:DynamicPageHeader>
                <f:content>
                    <layout:VerticalLayout width="100%">
                        <layout:VerticalLayout class="sapUiMediumMarginEnd"
                            width="100%">

                            <fb:FilterBar useToolbar="false"
                                search=".onSearch"
                                showClearOnFB="true"
                                clear="removeFilter"
                                showRestoreButton="false"
                                showFilterConfiguration="false">
                                <fb:filterGroupItems>
                                    <fb:FilterGroupItem name="Titolo"
                                        label="Creatore"
                                        groupName="Group1"
                                        visibleInFilterBar="true">
                                        <fb:control>
                                            <Input value="{modelloFilter>/creatore}" />

                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem name="dataApertura"
                                        label="Data"
                                        groupName="Group1"
                                        visibleInFilterBar="true">
                                        <fb:control>
                                            <DateRangeSelection value= "{
                                                    'type': 'sap.ui.model.type.DateInterval',
                                                    'formatOptions': {
                                                        'pattern': 'dd/MM/yyyy'
                                                    },
                                                    'parts': [
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': 'modelloFilter>/datainizio'
                                                        },
                                                        {
                                                            'type': 'sap.ui.model.type.Date',
                                                            'path': 'modelloFilter>/datafine'
                                                        }
                                                    ]
                                                }" />


                                        </fb:control>
                                    </fb:FilterGroupItem>
                                    <fb:FilterGroupItem name="SupplierName"
                                        label="Stato"
                                        groupName="Group1"
                                        visibleInFilterBar="true">
                                        <fb:control>
                                            <ComboBox selectedKey="{modelloFilter>/stato}">
                                                <core:Item key="Nuovo"
                                                    text="Nuovo" />
                                                <core:Item key="In_Firma"
                                                    text="In Fase di Firma" />
                                                <core:Item key="Bloccato"
                                                    text="Bloccato" />
                                                <core:Item key="Firmato "
                                                    text="Firmato" />
                                                <core:Item key="Chiuso"
                                                    text="Chiuso" />
                                            </ComboBox>
                                            <!-- <Input value="{modelloFiltri>/localeFiltro}" /> -->
                                        </fb:control>
                                    </fb:FilterGroupItem>
                                </fb:filterGroupItems>
                            </fb:FilterBar>
                        </layout:VerticalLayout>

                        <layout:VerticalLayout width="100%">
                            <FlexBox justifyContent="End">
                                <Button text="Crea conformità"
                                    icon="sap-icon://add"
                                    class="sapUiSmallMarginBottom"
                                    press="openDialogCreaModello"
                                    type="Emphasized"
                                    visible="{=${modelloRuolo>/settore}==='Qualità' ? true : false}" />
                            </FlexBox>
                        </layout:VerticalLayout>
                    </layout:VerticalLayout>


                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table class="tableProcessate"
                items="{
                    path: 'modelloDatiNode>/',
                    grouped: true,
                    sorter: {
                        path: 'modelloDatiNode>id_nonconf',
                       descending: true,
                        group: '.getGroup'
                    },
                    groupHeaderFactory: '.getGroupHeader'
                }"
                id="tableRichieste">
                <columns>

                    <Column hAlign="Center"
                        mergeDuplicates="true"
                        width="25%">
                        <header>
                            <Text text="Titolo Permesso" />
                        </header>
                    </Column>

                    <Column hAlign="Center"
                        width="25%">
                        <header>
                            <Text text="Data Permesso" />
                        </header>
                    </Column>
                    <Column hAlign="Center"
                        width="25%">
                        <header>
                            <Text text="Creatore Permesso" />
                        </header>
                    </Column>
                    <Column hAlign="Center"
                        width="25%">
                        <header>
                            <Text text="Revisione" />
                        </header>
                    </Column>
                    <Column hAlign="Center"
                        width="25%">
                        <header>
                            <Text text="Allegato" />
                        </header>
                    </Column>
                    <Column hAlign="Center"
                        width="25%">
                        <header>
                            <Text text="Stato Permesso" />
                        </header>
                    </Column>

                </columns>
                <ColumnListItem vAlign="Middle"
                    press="handleNavigateToMidColumnPress"
                    type="Navigation">
                    <cells>
                        <Text text="{modelloDatiNode>titolo}" />
                        <Text text="{ 
                        path:'modelloDatiNode>data_ora',
                        'type': 'sap.ui.model.type.Date'
                     }" />
                        <Text text="{modelloDatiNode>creatore}" />
                        <Text text="{modelloDatiNode>revisione}" />
                        <Button icon="sap-icon://pdf-attachment"
                            press="openDialogShowPDF"
                            type="Emphasized">
                            <customData>
                                <core:CustomData key="TabellaHome"/>
                            </customData>
                        </Button>
                        <Text text="{modelloDatiNode>stato}">
                            <customData>
                                <core:CustomData writeToDom="true"
                                    key="prova"
                                    value="{modelloDatiNode>stato}" />
                            </customData>
                        </Text>
                    </cells>
                </ColumnListItem>
            </Table>

        </f:content>

    </f:DynamicPage>
</mvc:View>
