<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:unified="sap.ui.unified">
    <Dialog contentWidth="50%"
        afterClose="afterClose"
        contentHeight="40%"
        titleAlignment="Center">
        <customHeader>
            <Toolbar>
                <Title text="Creazione non conformitÃ " />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline"
                    type="Emphasized"
                    press="closeDialog" />
            </Toolbar>
        </customHeader>
        <!-- <HBox alignItems="Stretch"></HBox> -->
        <f:SimpleForm editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="2"
            labelSpanL="2"
            labelSpanM="2"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="2"
            emptySpanL="2"
            emptySpanM="2"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false">
            <f:content>
                <c:Title text=" " />
                <Label text="Titolo"
                    required="true" />
                <Input value="{modelloNewModel>/titolo}" />
                <Label text="Data"
                    required="true" />
                <DatePicker
                    value="{ 
                        path:'modelloNewModel>/data',
                        formatter: '.format.formatData'
                     }"
                    displayFormat="dd/MM/yyyy" />
                <Label text="Tipologia"
                    required="true" />
                <Input value="{modelloNewModel>/tipologia}" />
                <Label text="Enti"
                    required="true" />
                <MultiComboBox selectionFinish="filterData"
                    showSelectAll="true"
                    items="{
                            path: 'modelloNewModel>/enti',
                            sorter: {
                                path: 'settore_lavorativo',
                                descending: false,
                                group: true
                            },
                            groupHeaderFactory: '.getGroupHeaderMultiCombobox'
                            }"
                    selectedKeys="{modelloNewModel>/entiSelezionati}">
                    <c:Item key="{modelloNewModel>}"
                        text="{modelloNewModel>}" />
                </MultiComboBox>
                <Label required="true"
                    text="Firmatari"
                    visible="{=${modelloNewModel>/entiSelezionati} !== null ? true : false}" />
                <MultiComboBox  
                    visible="{=${modelloNewModel>/entiSelezionati} !== null ? true : false}"
                    items="{
                            path: 'modelloNewModel>/utentiSelect',
                            sorter: {
                                path: 'ruolo',
                                descending: false,
                                group: true
                            },
                            groupHeaderFactory: '.getGroupHeaderMultiCombobox'
                        }"
                    selectedKeys="{modelloNewModel>/firmatari}" >
                    <c:Item key="{modelloNewModel>nome}"
                        text="{modelloNewModel>nome}" />
                </MultiComboBox>
                <Label text="Caricamento file"
                    required="true" />
                <unified:FileUploader name="myFileUpload"
                    id="myFileUpload"
                    width="100%"
                    uploadUrl='http://localhost:51531/upload/NonConformit/1'
                    tooltip="Upload your file to the local server"
                    uploadComplete="handleUploadComplete"
                    change="handleChangeFile"
                    typeMissmatch="handleTypeMissmatch"
                    style="Emphasized"
                    fileType="pdf"
                    placeholder="Carica File..." />
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button text="Crea Bozza"
                icon="sap-icon://BusinessSuiteInAppSymbols/icon-save-as"
                type="Neutral"
                press="createModelloNonConf" />
            <Button text="Crea"
                icon="sap-icon://create-form"
                type="Emphasized"
                press="createModelloNonConf" />
        </buttons>
    </Dialog>
</c:FragmentDefinition>